{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ES2015", "ES2016", "ES2017", "ES2018", "ESNext"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "sourceMap": true,
    "jsx": "react-jsx"
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
